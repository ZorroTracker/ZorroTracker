/*
	This file defines the shortcuts usable everywhere on ZorroTracker. A single shortcut can have multiple aliases, or have none at all.
	This file is checked when the program runs (so, you can not edit it as the program is running), and will allow the shortcuts
	to be mapped to application functionality. If you use an invalid key or function name, the shortcut will be ignored,
	but the console will contain a message showing what happened. Please proceed with care.
*/

{
	"ui.opendevtools":						[ "ctrl+shift+I", "F12" ],				/* shortcut for opening Chromium dev tools */
	"ui.inspectelement":					[ "shift+F12" ],						/* shortcut for inspect element in Chromium dev tools */
	"ui.fullscreen":						[ "F11" ],								/* shortcut for entering/exiting maximized mode */
	"ui.close":								[ "ctrl+W" ],							/* shortcut for closing the project or window */
	"ui.zoomin":							[ "ctrl+equal" ],						/* shortcut for zooming in the window */
	"ui.zoomout":							[ "ctrl+minus" ],						/* shortcut for zooming out the window */
	"ui.zoomreset":							[ "ctrl+0" ],							/* shortcut for setting zoom level to 100% */

	"window.projectinfo":					[ "ctrl+P" ],							/* shortcut for opening the project info editor */
	"window.shortcuts":						[ "F2" ],								/* shortcut for opening the shortcuts editor */
}

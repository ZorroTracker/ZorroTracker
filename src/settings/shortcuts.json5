/*
	This file defines the shortcuts usable on the main editor window in ZorroTracker. A single shortcut can have multiple aliases, or have none at all.
	This file is checked when the program runs (so, you can not edit it as the program is running), and will allow the shortcuts
	to be mapped to application functionality. If you use an invalid key or function name, the shortcut will be ignored,
	but the console will contain a message showing what happened. Please proceed with care.
*/

{
	"ui.open":							[ "ctrl+O" ],							/* shortcut for opening a file or a project */
	"ui.undo":							[ "ctrl+Z" ],							/* shortcut for undoing a change */
	"ui.redo":							[ "ctrl+Y" ],							/* shortcut for redoing a change */
	"ui.save":							[ "ctrl+S" ],							/* shortcut for saving the project */
	"ui.saveas":						[ "ctrl+shift+S" ],						/* shortcut for saving the project as another file */
	"ui.new":							[ "ctrl+N" ],							/* shortcut for creating a new project */

	"layout.matrix.move.up":			[ "ArrowUp" ],							/* shortcut for moving to the pattern index above */
	"layout.matrix.move.down":			[ "ArrowDown" ],						/* shortcut for moving to the pattern index below */
	"layout.matrix.move.left":			[ "ArrowLeft" ],						/* shortcut for moving to the pattern index left */
	"layout.matrix.move.right":			[ "Arrowright" ],						/* shortcut for moving to the pattern index right */
	"layout.matrix.movemax.up":			[ "Home" ],								/* shortcut for moving to the pattern index top */
	"layout.matrix.movemax.down":		[ "End" ],								/* shortcut for moving to the pattern index bottom */
	"layout.matrix.select.up":			[ "shift+ArrowUp" ],					/* shortcut for moving the selection to up */
	"layout.matrix.select.down":		[ "shift+ArrowDown" ],					/* shortcut for moving the selection to down */
	"layout.matrix.select.left":		[ "shift+ArrowLeft" ],					/* shortcut for moving the selection to left */
	"layout.matrix.select.right":		[ "shift+Arrowright" ],					/* shortcut for moving the selection to right */
	"layout.matrix.selmax.up":			[ "shift+Home" ],						/* shortcut for moving the selection to top */
	"layout.matrix.selmax.down":		[ "shift+End" ],						/* shortcut for moving the selection to bottom */
	"layout.matrix.selall":				[ "alt+A" ],							/* shortcut for selecting entire matrix */
	"layout.matrix.selrow":				[ "shift+A" ],							/* shortcut for selecting entire row */
	"layout.matrix.selcolumn":			[ "ctrl+A" ],							/* shortcut for selecting entire column */
	"layout.matrix.scroll.up":			[ "PageUp" ],							/* shortcut for scrolling upwards */
	"layout.matrix.scroll.down":		[ "PageDown" ],							/* shortcut for scrolling downwards */
	"layout.matrix.insert":				[ "Insert" ],							/* shortcut for inserting a new row */
	"layout.matrix.delete":				[ "Delete" ],							/* shortcut for deleting rows */
	"layout.matrix.copy":				[ "ctrl+C" ],							/* shortcut for deleting copying data or a row */
	"layout.matrix.pasteenter":			[ "ctrl+V" ],							/* shortcut for entering paste mode */
	"layout.matrix.pasteexit":			[ "Escape" ],							/* shortcut for exiting paste mode */
	"layout.matrix.change.up":			[ "ctrl+ArrowUp" ],						/* shortcut for changing the selected digits up by 1 */
	"layout.matrix.change.down":		[ "ctrl+ArrowDown" ],					/* shortcut for changing the selected digits down by 1  */
	"layout.matrix.edit":				[ "Enter" ],							/* shortcut for toggling edit mode and applying pasted values */
	"layout.matrix.hex.0":				[ "0" ],								/* shortcut for the hexadecimal value 0 */
	"layout.matrix.hex.1":				[ "1" ],								/* shortcut for the hexadecimal value 1 */
	"layout.matrix.hex.2":				[ "2" ],								/* shortcut for the hexadecimal value 2 */
	"layout.matrix.hex.3":				[ "3" ],								/* shortcut for the hexadecimal value 3 */
	"layout.matrix.hex.4":				[ "4" ],								/* shortcut for the hexadecimal value 4 */
	"layout.matrix.hex.5":				[ "5" ],								/* shortcut for the hexadecimal value 5 */
	"layout.matrix.hex.6":				[ "6" ],								/* shortcut for the hexadecimal value 6 */
	"layout.matrix.hex.7":				[ "7" ],								/* shortcut for the hexadecimal value 7 */
	"layout.matrix.hex.8":				[ "8" ],								/* shortcut for the hexadecimal value 8 */
	"layout.matrix.hex.9":				[ "9" ],								/* shortcut for the hexadecimal value 9 */
	"layout.matrix.hex.A":				[ "A" ],								/* shortcut for the hexadecimal value A */
	"layout.matrix.hex.B":				[ "B" ],								/* shortcut for the hexadecimal value B */
	"layout.matrix.hex.C":				[ "C" ],								/* shortcut for the hexadecimal value C */
	"layout.matrix.hex.D":				[ "D" ],								/* shortcut for the hexadecimal value D */
	"layout.matrix.hex.E":				[ "E" ],								/* shortcut for the hexadecimal value E */
	"layout.matrix.hex.F":				[ "F" ],								/* shortcut for the hexadecimal value F */
}

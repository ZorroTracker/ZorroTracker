/*
	This file defines the shortcuts usable on ZorroTracker. A single shortcut can have multiple aliases, or have none at all.
	This file is checked when the program runs (so, you can not edit it as the program is running), and will allow the shortcuts
	to be mapped to application functionality. If you use an invalid key or function name, the shortcut will be ignored,
	but the console will contain a message showing what happened. Please proceed with care.
*/

{
	"ui.opendevtools":					[ "F12", "ctrl+shift+I" ],	/* shortcut for opening Chromium dev tools */
	"ui.inspectelement":				[ "shift+F12" ],			/* shortcut for inspect element in Chromium dev tools */
	"ui.fullscreen":					[ "F11" ],					/* shortcut for entering/exiting maximized mode */
	"ui.open":							[ "ctrl+O" ],				/* shortcut for opening a file or a project */
	"ui.undo":							[ "ctrl+Z" ],				/* shortcut for undoing a change */
	"ui.redo":							[ "ctrl+Y" ],				/* shortcut for redoing a change */

	"layout.patternindex.move.up":		[ "ArrowUp" ],				/* shortcut for moving to the pattern index above */
	"layout.patternindex.move.down":	[ "ArrowDown" ],			/* shortcut for moving to the pattern index below */
	"layout.patternindex.move.left":	[ "ArrowLeft" ],			/* shortcut for moving to the pattern index left */
	"layout.patternindex.move.right":	[ "Arrowright" ],			/* shortcut for moving to the pattern index right */
	"layout.patternindex.movemax.up":	[ "Home" ],					/* shortcut for moving to the pattern index top */
	"layout.patternindex.movemax.down": [ "End" ],					/* shortcut for moving to the pattern index bottom */
	"layout.patternindex.select.up":	[ "shift+ArrowUp" ],		/* shortcut for moving the selection to up */
	"layout.patternindex.select.down":	[ "shift+ArrowDown" ],		/* shortcut for moving the selection to down */
	"layout.patternindex.select.left":	[ "shift+ArrowLeft" ],		/* shortcut for moving the selection to left */
	"layout.patternindex.select.right":	[ "shift+Arrowright" ],		/* shortcut for moving the selection to right */
	"layout.patternindex.selmax.up":	[ "shift+Home" ],			/* shortcut for moving the selection to top */
	"layout.patternindex.selmax.down":	[ "shift+End" ],			/* shortcut for moving the selection to bottom */
	"layout.patternindex.selall":		[ "ctrl+A" ],				/* shortcut for selecting entire matrix */
	"layout.patternindex.selrow":		[ "shift+A" ],				/* shortcut for selecting entire row */
	"layout.patternindex.selcolumn":	[ "alt+A" ],				/* shortcut for selecting entire column */
	"layout.patternindex.scroll.up":	[ "PageUp" ],				/* shortcut for scrolling upwards */
	"layout.patternindex.scroll.down":	[ "PageDown" ],				/* shortcut for scrolling downwards */
	"layout.patternindex.insert":		[ "Insert" ],				/* shortcut for inserting a new row */
	"layout.patternindex.insert":		[ "Delete" ],				/* shortcut for deleting rows */
	"layout.patternindex.copy":			[ "ctrl+C" ],				/* shortcut for deleting copying data or a row */
	"layout.patternindex.paste.enter":	[ "ctrl+V" ],				/* shortcut for entering paste mode */
	"layout.patternindex.paste.exit":	[ "Escape" ],				/* shortcut for exiting paste mode */
	"layout.patternindex.paste.apply":	[ "Enter" ],				/* shortcut for applying a pasted value */
	"layout.patternindex.change.up":	[ "shift+ArrowUp" ],		/* shortcut for changing the selected digits up by 1 */
	"layout.patternindex.change.down":	[ "shift+ArrowDown" ],		/* shortcut for changing the selected digits down by 1  */
	"layout.patternindex.hex.0":		[ "0" ],					/* shortcut for the hexadecimal value 0 */
	"layout.patternindex.hex.1":		[ "1" ],					/* shortcut for the hexadecimal value 1 */
	"layout.patternindex.hex.2":		[ "2" ],					/* shortcut for the hexadecimal value 2 */
	"layout.patternindex.hex.3":		[ "3" ],					/* shortcut for the hexadecimal value 3 */
	"layout.patternindex.hex.4":		[ "4" ],					/* shortcut for the hexadecimal value 4 */
	"layout.patternindex.hex.5":		[ "5" ],					/* shortcut for the hexadecimal value 5 */
	"layout.patternindex.hex.6":		[ "6" ],					/* shortcut for the hexadecimal value 6 */
	"layout.patternindex.hex.7":		[ "7" ],					/* shortcut for the hexadecimal value 7 */
	"layout.patternindex.hex.8":		[ "8" ],					/* shortcut for the hexadecimal value 8 */
	"layout.patternindex.hex.9":		[ "9" ],					/* shortcut for the hexadecimal value 9 */
	"layout.patternindex.hex.A":		[ "A" ],					/* shortcut for the hexadecimal value A */
	"layout.patternindex.hex.B":		[ "B" ],					/* shortcut for the hexadecimal value B */
	"layout.patternindex.hex.C":		[ "C" ],					/* shortcut for the hexadecimal value C */
	"layout.patternindex.hex.D":		[ "D" ],					/* shortcut for the hexadecimal value D */
	"layout.patternindex.hex.E":		[ "E" ],					/* shortcut for the hexadecimal value E */
	"layout.patternindex.hex.F":		[ "F" ],					/* shortcut for the hexadecimal value F */
}
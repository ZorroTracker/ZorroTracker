{
	"name": "zorrotracker",
	"version": "0.0.0-alpha",
	"description": "Sega Mega Drive/Genesis music tracker program based on Electron. Project code is created by Aurora Fields, funded and adviced by: Silverhand, acrouzet, Nat The Porcupine.",
	"main": "build/main.js",
	"scripts": {
		"prebuild": "node bin/build-packages.js",
		"init": "npm run build",
		"test": "npm run build & jest --coverage & pause",
		"lint": "eslint . --ext .ts",
		"dev": "npx concurrently \"npm run tsc-watch\" \"npm run less-watch\"",
		"less-compile": "compile-less -d src/ui -o build/ui",
		"less-watch": "less-watch-compiler --source-map src/ui build/ui",
		"tsc": "npx tsc -p tsconfig.build.json",
		"tsc-watch": "npx tsc -w -p tsconfig.build.json",
		"copy": "copyfiles -e \"src/**/node_modules/**\" -e \"src/**/webpack.config.js\"  -u 1 \"src/**/*.dll\" \"src/**/*.so\" \"src/**/*.node\" \"src/**/*.js\" \"src/**/*.json5\" \"src/**/*.html\" build",
		"build": "npx concurrently \"npm run tsc\" \"npm run less-compile\" \"npm run copy\"",
		"electron": "electron build/main.js",
		"start": "npm run build & npm run electron",
		"pack": "npm run build & electron-builder --dir",
		"ci_init": "npm run build",
		"ci_test": "jest",
		"ci_deploy": "electron-builder build --publish never"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ZorroTrackerDev/ZorroTracker.git"
	},
	"author": "Aurora Fields",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ZorroTrackerDev/ZorroTracker/issues"
	},
	"homepage": "https://github.com/ZorroTrackerDev/ZorroTracker#readme",
	"devDependencies": {
		"@types/adm-zip": "^0.4.34",
		"@types/jest": "^26.0.22",
		"@types/jsdom": "^16.2.10",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"chromedriver": "^89.0.0",
		"compile-less-cli": "^1.7.0",
		"concurrently": "^6.1.0",
		"copyfiles": "^2.4.1",
		"electron": "^12.0.4",
		"electron-builder": "^22.10.5",
		"eslint": "^7.24.0",
		"jest": "^26.6.3",
		"less": "^4.1.1",
		"less-watch-compiler": "^1.15.0",
		"spectron": "^14.0.0",
		"ts-jest": "^26.5.4",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"adm-zip": "^0.5.5",
		"json5": "^2.2.0",
		"nuked-opn2-node": "file:./vendor/Nuked-OPN2.rs/nuked-opn2-node",
		"nuked-psg-node": "file:./vendor/Nuked-PSG.rs/nuked-psg-node"
	},
	"jest": {
		"verbose": true,
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testMatch": [
			"**/tests/**/*.[jt]s?(x)",
			"**/src/**/?(*.)+(spec|test).[jt]s?(x)",
			"!**/dist/**/*"
		],
		"modulePathIgnorePatterns": [
			"/tests/_base.ts"
		],
		"clearMocks": true,
		"coverageDirectory": "coverage",
		"coverageProvider": "v8",
		"collectCoverageFrom": [
			"**/*.ts",
			"!**/*.d.ts"
		],
		"coveragePathIgnorePatterns": [
			"node_modules",
			"build",
			"coverage",
			"dist",
			"src/main.ts",
			"src/system/ipc.ts",
			"src/ui/ipc ui.ts",
			"src/scripts/",
			"src/system/",
			"src/ui/"
		]
	},
	"build": {
		"appId": "dev.zorrotracker",
		"productName": "ZorroTracker",
		"generateUpdatesFilesForAllChannels": true,
		"asar": true,
		"directories": {
			"output": "./dist",
			"buildResources": "./res"
		},
		"files": [
			{
				"from": "./build",
				"to": "./build",
				"filter": [
					"**/*",
					"!settings/**/*",
					"!scripts/**/*"
				]
			},
			"./node_modules/**/*",
			"./package.json",
			"!./build/settings/**/*",
			"!./build/scripts/**/*"
		],
		"extraFiles": [
			{
				"from": "./build/settings",
				"filter": "**/*",
				"to": "./settings"
			},
			{
				"from": "./build/scripts/",
				"filter": [
					"chips/*/dist/**/*",
					"chips/*/build/**/*",
					"drivers/*/dist/**/*",
					"drivers/*/build/**/*",
					"audio/*/dist/**/*",
					"audio/*/build/**/*",
					"**/*.json5"
				],
				"to": "./scripts"
			}
		],
		"artifactName": "${productName}-${os}-${arch}-${buildVersion}.${ext}",
		"win": {
			"target": [
				{
					"target": "tar.gz",
					"arch": [
						"x64"
					]
				}
			]
		},
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				{
					"target": "tar.gz",
					"arch": [
						"x64"
					]
				}
			]
		},
		"linux": {
			"category": "Audio",
			"target": [
				{
					"target": "tar.gz",
					"arch": [
						"x64"
					]
				}
			]
		}
	}
}

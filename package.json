{
	"name": "zorrotracker",
	"version": "0.0.0-alpha",
	"description": "Sega Mega Drive/Genesis music tracker program based on Electron. Project code is created by Aurora Fields, funded and adviced by: Silverhand, acrouzet, Nat The Porcupine.",
	"main": "main.js",
	"scripts": {
		"init": "npm run build",
		"test": "npm run build & jest --coverage & pause",
		"lint": "eslint . --ext .ts",
		"dev": "concurrently \"npm run tsc-watch\" \"npm run less-watch\"",
		"less-compile": "compile-less -d src/ui -o build/ui",
		"less-watch": "less-watch-compiler",
		"tsc": "npx tsc -p tsconfig.build.json",
		"tsc-watch": "npx tsc -w -p tsconfig.build.json",
		"copy": "copyfiles -u 1 \"src/**/*.js\" \"./src/**/*.json5\" \"./src/**/*.html\" build",
		"build": "npm run tsc & npm run less-compile & npm run copy",
		"electron": "cd build & electron main.js",
		"start": "npm run build & npm run electron",
		"pack": "npm run build & electron-builder --dir",
		"ci_init": "npm run build",
		"ci_test": "jest",
		"ci_deploy": "electron-builder build --publish never"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ZorroTrackerDev/ZorroTracker.git"
	},
	"author": "Aurora Fields",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/ZorroTrackerDev/ZorroTracker/issues"
	},
	"homepage": "https://github.com/ZorroTrackerDev/ZorroTracker#readme",
	"devDependencies": {
		"@types/jest": "^26.0.22",
		"@types/jsdom": "^16.2.10",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"chromedriver": "^89.0.0",
		"compile-less-cli": "^1.7.0",
		"copyfiles": "^2.4.1",
		"electron": "^12.0.4",
		"electron-builder": "^22.10.5",
		"eslint": "^7.24.0",
		"jest": "^26.6.3",
		"less": "^4.1.1",
		"less-watch-compiler": "^1.14.6",
		"spectron": "^14.0.0",
		"ts-jest": "^26.5.4",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"audify": "^1.5.7",
		"json5": "^2.2.0"
	},
	"jest": {
		"verbose": true,
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testMatch": [
			"**/tests/**/*.[jt]s?(x)",
			"**/src/**/?(*.)+(spec|test).[jt]s?(x)",
			"!**/dist/**/*"
		],
		"modulePathIgnorePatterns": [
			"/tests/_base.ts"
		],
		"clearMocks": true,
		"coverageDirectory": "coverage",
		"coverageProvider": "v8",
		"collectCoverageFrom": [
			"**/*.ts",
			"!**/*.d.ts"
		],
		"coveragePathIgnorePatterns": [
			"node_modules",
			"build",
			"coverage",
			"dist",
			"src/main.ts",
			"src/system/ipc.ts",
			"src/ui/ipc ui.ts"
		]
	},
	"build": {
		"appId": "dev.zorrotracker",
		"productName": "ZorroTracker",
		"generateUpdatesFilesForAllChannels": true,
		"asar": false,
		"directories": {
			"output": "./dist"
		},
		"files": [
			{
				"from": "./build",
				"to": ".",
				"filter": [ "**/*", "!settings/**/*", "!scripts/**/*" ]
			},
			"./node_modules/**/*",
			"./package.json",
			"!./build/settings/**/*",
			"!./build/scripts/**/*"
		],
		"extraFiles": [
			{
				"from": "./build/settings",
				"filter": "**/*",
				"to": "./settings"
			},
			{
				"from": "./build/scripts/",
				"filter": "**/*",
				"to": "./scripts"
			}
		],
		"artifactName": "${productName}-${os}-${arch}-${buildVersion}.${ext}",
		"win": {
			"target": [
				{
					"target": "tar.gz",
					"arch": [
						"ia32"
					]
				}
			]
		},
		"mac": {
			"target": [
				{
					"target": "tar.gz",
					"arch": [
						"ia32"
					]
				}
			]
		}
	},
	"linux": {
		"target": [
			{
				"target": "tar.gz",
				"arch": [
					"ia32"
				]
			}
		]
	}
}
